package com.xcontent.repository;

import com.xcontent.model.*;
import org.springframework.data.mongodb.repository.MongoRepository;
import org.springframework.stereotype.Repository;
import java.util.*;

@Repository
public interface TemplateDependencyRepository extends MongoRepository<TemplateDependency, String> {
    List<TemplateDependency> findByTemplateId(String templateId);
    List<TemplateDependency> findByTargetId(String targetId);
    void deleteByTemplateId(String templateId);
}

@Repository
public interface DependencyAnalysisRepository extends MongoRepository<DependencyAnalysis, String> {
    List<DependencyAnalysis> findByTemplateId(String templateId);
    List<DependencyAnalysis> findByTemplateIdAndType(String templateId, AnalysisType type);
}
