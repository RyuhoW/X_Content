package com.xcontent.model.dto;

import lombok.Data;
import java.util.Map;
import java.util.List;

@Data
public class ChartDefinition {
    private String name;
    private String description;
    private String chartType;
    private DataSourceConfig dataSource;
    private VisualizationConfig visualization;
    private List<String> metrics;
    private Map<String, String> parameters;
    private StyleConfig styling;
    private Integer refreshInterval;
}

@Data
public class DataSourceConfig {
    private String type; // SQL, API, METRICS
    private String query;
    private Map<String, String> parameters;
    private String aggregation; // SUM, AVG, MAX, MIN
    private String timeField;
}

@Data
public class VisualizationConfig {
    private String xAxis;
    private String yAxis;
    private List<String> series;
    private Boolean showLegend;
    private Boolean showTooltip;
    private Map<String, Object> options;
}

@Data
public class StyleConfig {
    private Map<String, String> colors;
    private Map<String, Object> fonts;
    private Map<String, Object> layout;
    private Map<String, Object> animation;
}
