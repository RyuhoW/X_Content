<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.xcontent.controller.ContentEditorController"
      spacing="10" styleClass="content-editor">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Template:"/>
        <ComboBox fx:id="templateSelector" prefWidth="200"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Save as Template" onAction="#handleSaveTemplate"/>
    </HBox>

    <TextArea fx:id="contentArea" 
              wrapText="true" 
              prefRowCount="10"
              promptText="Enter your content here..."/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Characters:"/>
        <Label fx:id="characterCount" text="0/280"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="AI Optimize" onAction="#handleAiOptimize"/>
    </HBox>

    <TitledPane text="Hashtags" expanded="false">
        <VBox spacing="5">
            <TextField fx:id="hashtagInput" 
                      promptText="Enter hashtag"/>
            <FlowPane fx:id="hashtagContainer" 
                      hgap="5" vgap="5"/>
        </VBox>
    </TitledPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Schedule" onAction="#handleSchedule"/>
        <Button text="Preview" onAction="#handlePreview"/>
        <Button text="Post Now" onAction="#handlePost"/>
    </HBox>
</VBox>
