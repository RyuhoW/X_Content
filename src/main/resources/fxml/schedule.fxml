<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.xcontent.controller.ScheduleController"
      spacing="10" styleClass="schedule-view">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="View:"/>
        <ToggleButton text="Day" selected="true" fx:id="dayViewButton"/>
        <ToggleButton text="Week" fx:id="weekViewButton"/>
        <ToggleButton text="Month" fx:id="monthViewButton"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="New Schedule" onAction="#handleNewSchedule"/>
    </HBox>

    <SplitPane VBox.vgrow="ALWAYS">
        <!-- Calendar View -->
        <ScrollPane fitToWidth="true" fitToHeight="true">
            <VBox fx:id="calendarContainer" styleClass="calendar-container"/>
        </ScrollPane>

        <!-- Schedule List -->
        <VBox spacing="5">
            <Label text="Scheduled Posts" styleClass="section-header"/>
            <TableView fx:id="scheduleTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="timeColumn" text="Time"/>
                    <TableColumn fx:id="contentColumn" text="Content"/>
                    <TableColumn fx:id="statusColumn" text="Status"/>
                    <TableColumn fx:id="actionsColumn" text="Actions"/>
                </columns>
            </TableView>
        </VBox>
    </SplitPane>
</VBox>
