<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.xcontent.controller.TemplatesController"
      spacing="10" styleClass="templates-view">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Category:"/>
        <ComboBox fx:id="categorySelector"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="New Template" onAction="#handleNewTemplate"/>
    </HBox>

    <TableView fx:id="templateTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="nameColumn" text="Name"/>
            <TableColumn fx:id="categoryColumn" text="Category"/>
            <TableColumn fx:id="lastUsedColumn" text="Last Used"/>
            <TableColumn fx:id="actionsColumn" text="Actions"/>
        </columns>
    </TableView>
</VBox>
